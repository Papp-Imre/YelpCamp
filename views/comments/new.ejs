<% include ../partials/header %>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h1 style="text-align: center">Add a new comment to <%= campground.name %>!</h1>
            <div style="width: 33.4%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                    <div class="from-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                    </div>
                    <div class="from-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Your comment goes here...">
                    </div>
                    <div class="from-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>